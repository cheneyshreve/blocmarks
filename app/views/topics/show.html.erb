<div class="row">
  <div class="col-md-8">
    <h3><%= @topic.title %></h3>
    <%= link_to "Edit", edit_topic_path, class: 'btn btn-success' %>
    <%= link_to "Delete", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <% if @topic.title %>
      <h3>Bookmarks | <%=  "#{@topic.title}" %></h3>
    <% else %>
      <h3>Bookmarks</h3>
    <% end %>
        <% @topic.bookmarks.each do |bookmark| %>
            <div class="well">
              <%= render partial: 'bookmarks/thumbnail', locals: { bookmark: bookmark } %>
              <%= link_to "Edit", edit_topic_bookmark_path(@topic,bookmark), class: 'btn btn-success' %>
              <%= link_to "Delete", [@topic,bookmark], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this bookmark?' }  %>
            </div>
        <% end %>
        <div class="row">
          <div class="col-md-8">
           <%= link_to "New", new_topic_bookmark_path(@topic), class: 'btn btn-success'  %>
         </div>
       </div>
    </div>
</div>
<div class="footer">
  <div class="row">
    <div class="col-md-8">
     <p>Website thumbnails by: <a href="https://www.bitpixels.com/">BitPixels</a></p>
    </div>
 </div>
</div>
