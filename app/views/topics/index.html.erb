<div class="row">
  <div class="col-md-8">
    <h3>Topics Index</h3>
      <% @topics.each do |topic| %>
         <h3 class="media-heading">
            <%= link_to topic.title, topic %>
            <h4 class="media-heading">
              <% topic.bookmarks.each do |bookmark| %>
              <div class="well">
                <%= render partial: 'bookmarks/thumbnail', locals: { bookmark: bookmark } %>
              </div>  
              <% end %>
            </h4>
      <% end %>
      <%= link_to "New", new_topic_path, class: 'btn btn-success'%>
  </div>
</div>
